<p id="notice"><%= notice %></p>

<p>
  <strong>Property name:</strong>
  <%= @property.property_name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>Age:</strong>
  <%= @property.age %>
</p>

<p>
  <strong>Note:</strong>
  <%= @property.note %>
</p>

 <% number = 0 %>
<% @nearest_stations.each do |n| %>
  <% if @property.nearest_stations.any? %>
    <h2>最寄り駅<%= number += 1 %></h2>
    <p>
      <strong>Route_name:</strong>
      <%= n.route_name %>
    </p>

    <p>
      <strong>Station_name:</strong>
      <%= n.station_name %>
    </p>

    <p>
      <strong>Time:</strong>
      <%= n.time %>
    </p>

  <% end %>
<% end %>

